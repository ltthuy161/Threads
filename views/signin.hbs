<div class="page">
    <div class="container">
        <h2 class="text">Welcome back!</h2>

        <!-- Form để xử lý đăng nhập -->
        <form id="signin-form" method="POST">
            <div class="textbox" style="top: 150px">
                <label class="label" for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Enter your email" required />
            </div>

            <div class="textbox" style="top: 215px">
                <label class="label" for="password">Password</label>
                <input
                    type="password"
                    id="password"
                    name="password"
                    placeholder="At least 8 characters"
                    required
                    minlength="8"
                />
            </div>

            <div class="buttons">
                <button class="sign-up-button" type="submit">Sign in</button>
            </div>
        </form>

        <a class="forgot-password-link" href="/forgot-password">Forgot password?</a>
    </div>
</div>