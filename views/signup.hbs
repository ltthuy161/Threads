<div class="page">

    <div class="container">

        <h2 class="text">Welcome!</h2>

        <form method="POST" action="/signup">

            {{#if message}}
                <div class="message">
                    <p>{{message}}</p>
                </div>
            {{/if}}

            <div class="textbox" style="top: 85px">
                <label class="label" for="username">User Name</label>
                <input
                    type="text"
                    id="username"
                    name="username"
                    placeholder="Enter your user name"
                    required
                />
            </div>

            <div class="textbox" style="top: 150px">
                <label class="label" for="email">Email</label>
                <input
                    type="email"
                    id="email"
                    placeholder="Enter your email"
                    name="email"
                    required
                />
            </div>

            <div class="textbox" style="top: 215px">
                <label class="label" for="password">Password</label>
                <input
                    type="password"
                    id="password"
                    name="password"
                    placeholder="At least 8 characters"
                    required
                />
            </div>

            <button class="sign-up-button" type="submit">Sign Up</button>
            <a class="signin-link" href="/signin">Already had an account? Sign In</a>
        </form>

    </div>
</div>

<script>
    // Lắng nghe sự kiện submit của form
    document.querySelector("form").addEventListener("submit", function (event) {
        const password = document.querySelector("#password").value;

        // Kiểm tra độ dài mật khẩu
        if (password.length < 8) {
            event.preventDefault(); // Ngăn không gửi form
            alert("Password must be at least 8 characters long");
        }

        // Kiểm tra username ít nhất 8 kí tự, không chứa kí tự đặc biệt
        const username = document.querySelector("#username").value;
        if (username.length < 4) {
            event.preventDefault(); // Ngăn không gửi form
            alert("Username must be at least 4 characters long");
        } else if (!/^[a-zA-Z0-9]*$/.test(username)) {
            event.preventDefault(); // Ngăn không gửi form
            alert("Username must contain only letters and numbers");
        }
    });
</script>